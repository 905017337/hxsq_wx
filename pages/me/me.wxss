/* pages/me/me.wxss */
page{
  height: 100%;
  overflow-x: hidden;
   /* background-color: #bdf1e1; */
  background: linear-gradient(#bdf1e1, #fff);
}

.top {
  height: 25%;
  width: 100%;
  /* background-color: #bdf1e1; */
  position: relative;
}

.userInfo {
  margin: auto;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 80%;
  width: 90%;
  background-color: #fff;

}

.userInfo .userInfo-top {
  height: 50%;
  margin: 10px;
}

.userInfo .userInfo-top .left {
  width: 80%;
  float: left;
}
.userInfo .userInfo-top .right {
  width: 26%;
  float: right;
  margin-right: -6%;
  height: 30%;
  text-align: center;
  border-radius: 15% / 50%;
  background-color: #DAEBE6;
}
.userInfo .userInfo-bottom {
  
  height: 50%;
  
  text-align: center;
}

.userInfo .userInfo-bottom .left {
  float: left;
  width: 49%;
  border-right: 1px solid #DAEBE6;
}

.userInfo .userInfo-bottom .right {
  float: right;
  width: 49%;
}
.order {
  margin: auto ;
  margin-top: 5%;
  right: 0;
  bottom: 0;
  left: 0;
  height: 15%;
  width: 90%;
  
  border-style: solid;
  box-shadow:0px 2px 5px 2px #DDDDDD;
  border-width: 0rpx;
}
.order .title{
  padding: 3% 0 0 6%;
  color: #000;
  background-color: #fff;
}
.menu{
  top:5%;
  height: 30%;
  width: 90%;
  margin:5% 5% 5% 5%;
}
.userInfo-top .left .photo{
  width: 30%;float: left;
}

.userInfo-top .left .username{
  width: 60%;float: left; margin: auto;padding-top: 10%;
}